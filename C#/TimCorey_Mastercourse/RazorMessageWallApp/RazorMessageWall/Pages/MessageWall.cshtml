@page
@model RazorMessageWall.Pages.MessageWallModel
@{
    ViewData["Title"] = "Message Wall";
}

<h1>
    Message Wall
</h1>

<form method="post">

    <div class="form-group">
        @for(int i = 0; i<Model.Messages.Count; i++)
        {
            <input type="hidden" asp-for="Messages[i]"/>
        }
        <input asp-for="Message" type="text" placeholder="Type your message"/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
<h2>These are the messages</h2>
@foreach(var item in Model.Messages)
{
    <h3>@item</h3>
}

<form method="post">

    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" type="text" placeholder="Type your first name"/>
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" type="text" placeholder="Type your last name" />
        <button type="submit" class="btn btn-primary">Welcome Message</button>
    </div>

</form>

<h2>Welcome message:</h2>
@if(!string.IsNullOrEmpty(Model.FirstName))
{
    @if (!string.IsNullOrEmpty(Model.LastName))
    {
        <h4> @Model.WelcomeMessage </h4>
    }
}
