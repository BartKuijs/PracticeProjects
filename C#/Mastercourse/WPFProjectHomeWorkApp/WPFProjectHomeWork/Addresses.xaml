<Window x:Class="WPFProjectHomeWork.Addresses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProjectHomeWork"
        mc:Ignorable="d"
        Title="Addresses" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label HorizontalAlignment="Right">Street:</Label>
            <Label HorizontalAlignment="Right">House Number:</Label>
            <Label HorizontalAlignment="Right">Postal Code:</Label>
            <Label HorizontalAlignment="Right">City:</Label>
            
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBox x:Name="StreetTextBox" Margin="0 5 0 4"></TextBox>
            <TextBox x:Name="HouseNumberTextBox" Margin="0 5 0 3"></TextBox>
            <TextBox x:Name="PostalCodeTextBox" Margin="0 5 0 3"></TextBox>
            <TextBox x:Name="CityTextBox" Margin="0 5 0 4"></TextBox>
            <Button x:Name="AddAddressButton" Margin="50" Padding="20" Click="AddAddressButton_Click">Add Address</Button>
        </StackPanel>
    </Grid>
</Window>
